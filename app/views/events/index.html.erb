 <div class=" traffic_status_page">

    <ul class='padoff'><% @events.each do |event| %>
      <div class= "d-flex temp-1">

        <div class= "d-flex  padoff-box" >
          <strong><ul class='padoff'><%= event.category %></ul></strong>
          <ul><%= event.address %></ul>
        </div>

        <div class=" button2" id= 'btn'>
          <%= link_to "Edit", edit_event_path(event), class:"btn btn-outline-dark btn-sm me-2"%>
          <%= link_to 'Remove',
            event_path(event), class:"btn btn-outline-dark btn-sm",
              method: :delete,
              data: { confirm: 'Are you sure'}%>
        </div>
      </div>
    <% end %>
    </ul>
  </div>
