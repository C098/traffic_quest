<div class="big">
  <div class="container-lg">
      <img
        src="https://images.unsplash.com/photo-1473042904451-00171c69419d?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxzZWFyY2h8OHx8dHJhZmZpY3xlbnwwfHwwfHw%3D&auto=format&fit=crop&w=600&q=60"
        alt="image">
      <div class="container-text">
        <h2><strong>Log in</strong></h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-primary text-light" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>
